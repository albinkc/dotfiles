// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Vim
  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "icon_theme": "Material Icon Theme",
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 200,
    "custom_digraphs": {}
  },
  "project_panel": {
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "autosave": "on_focus_change",
  "buffer_font_family": "Berkley Mono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Frapp√©"
  },
  "terminal": {
    // "font_family": "Berkley Mono Nerd Font",
    "font_family": "JetBrainsMono Nerd Font",
    "font_features": {}
  },
  "languages": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      // "language_servers": ["lexical", "!elixir-ls"] // <- `next-ls` or `lexical`
      // "language_servers": ["elixir-ls"] // <- `next-ls` or `lexical`
      "language_servers": ["next-ls"] // <- `next-ls` or `lexical`
    },
    "HEEX": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    }
  },
  "lsp": {
    // "elixir-ls": {
    //   "settings": {
    //     "dialyzerEnabled": false
    //   }
    // },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "heex": "html",
          "Elixir": "html"
        }
      }
    }
  }
}
